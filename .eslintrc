{
  "globals": {
    // Put things like jQuery, etc
    "jQuery": true,
    "$": true
  },
  "env": {
    // I write for browser
    "browser": true,
    // in CommonJS
    "node": true
  },
  // To give you an idea how to override rule options:
  "rules": {
    // Tons of rules you can use, for example...
    "indent": [2, "tab"],
    "space-before-function-paren": 0,
    "arrow-parens": [2, "always"],
    "arrow-body-style": [2, "always"],
    "prefer-const": 1,
    "no-var": 2,
    "vars-on-top": 1,
    "spaced-comment": 0,
    "no-console": 0
  },
  "extends": "airbnb/base"
}